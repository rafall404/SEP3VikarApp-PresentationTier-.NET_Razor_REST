@page "{searchString}"
@model SEP3.Pages.searchResultModel
@{
    ViewData["Title"] = "searchResult";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/searchReasult.css" />

    <title>Jobs Management</title>
</head>


<body>


    <div class="search">

        <img src="~/css/pictures/icons/logo.png" width="350px">

        <div class="inputwrapper">
            <input class="border-item" type="text" placeholder="Search in City" asp-for="@Model.searchString" value="@Request.Query["searchString"]">
        </div>

        <div class="buttonwrapper">
            <button class="gradientButton">Search</button>
        </div>

    </div>



    <div class="main">


        @if (Model.Jobs.Count == 0)
        {
        <div class="job-wrapper">
            <div class="info">No result</div>
        </div>
        }
        else
        {
        <div class="jobs-wrapper">
            @foreach (Job job in Model.Jobs)
                {
            
            <div class="job-wrapper">
                <a asp-page="/jobDetailForViewer" asp-route-jobId="@job.id">
                    <div class="job">
                        <div class="title">@job.title</div>

                        <div class="basicInfo">
                            <div>@job.category</div>
                            <div>@job.time</div>
                            <div>@job.location</div>
                            <div>@job.wages</div>
                            <div>@job.status</div>
                        </div>

                        <div class="description">@job.description</div>
                    </div>
                </a>
            </div>
            
                }
        </div>
        }





        <div class="pagination">
            @if (Model.ShowPrevious)
            {
            <div class="page-button">
                <a asp-page="/searchResult" asp-route-currentpage="@(Model.CurrentPage -1)" class="page-link">Previous</a>
            </div>
            }


            <div class="page-dropDownList">
                <form id="dropDownListForm">
                    <select name="CurrentPage">

                        @for (var i = 1; i < Model.TotalPages + 1; i++)
                        {
                        @if (i == @Model.CurrentPage)
                            {
                        <option value="@i" selected>@i</option>
                            }
                            else
                            {
                        <option value="@i">@i</option>
                            }

                        }
                    </select>
                    <button id="pageSubmitButton" type="submit" asp-page="/searchResult">go</button>
                </form>
            </div>


            @if (Model.ShowNext)
            {
            <div class="page-button">
                <a asp-page="/searchResult" asp-route-currentpage="@(Model.CurrentPage + 1)" class="page-link">Next</a>
            </div>
            }
        </div>






    </div>








</body>
</html>

