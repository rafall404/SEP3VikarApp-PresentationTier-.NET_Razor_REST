@page "{jobId}"
@model SEP3.Pages.jobDetailForViewerModel
@{
    ViewData["Title"] = "jobDetail";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link rel="stylesheet" href="~/css/jobDetailForViewer.css" />

    <title>Account</title>
</head>

<body>
    <div class="layout">
        <center><img src="~/css/pictures/icons/logo1.png" width="500px" /></center>

        <div class="main">
            <a id="back" asp-page="/searchResult">← Back</a>

            @if (Model.detail == null)
            {
                <div class="info">
                    Error
                </div>
            }
            else
            {
                <div class="title">@Model.detail.title</div>
                <div class="description">Description:@Model.detail.description</div>
                <div class="basicInfo">
                    <ul>
                        <li>category: @Model.detail.category</li>
                        <li>time: @Model.detail.time</li>
                        <li>location: @Model.detail.location</li>

                        <li>wage: @Model.detail.wages</li>
                        <li>status: @Model.detail.status</li>
                    </ul>
                </div>
                <div class="posterInfo">
                    Poster Info:
                    <ul>
                        <li>username:@Model.detail.username</li>
                        <li>e-mail:@Model.detail.email</li>
                    </ul>
                </div>

                <form method="post">
                    <button class="gradientButton" asp-page-handler="Apply">Apply</button>
                </form>
            }


            </div>
    </div>


</body>
</html>


