@page
@using SEP3.Models
@model IndexModel
@{
    ViewData["Title"] = "Login page";
}

    <html lang="en">

    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="~/css/login.css">

        <title>VikarApp Loggin</title>
    </head>


    <body>

        

        <div id="login-wrapper">


            <h1>VikarApp</h1>
            <h1>@ViewData["confirmation"]</h1>


            <form id="loginForm" class="form" method="post">

                <div class="form-group">

                    <label for="inputUserName">Username</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend2">@@</span>
                        </div>
                        <input type="text" class="form-control" asp-for="Login.username" placeholder="Username" aria-describedby="inputGroupPrepend2" required>
                    </div>

                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" class="form-control" asp-for="Login.password" placeholder="Enter password" required>
                </div>

               
                <button type="submit" class="gradientButton" on asp-page-handler="Login">Login</button>
                
            </form>

            <p id="switch1" onclick="toregist()">Regist</p>
        </div>






        <div id="regist-wrapper">
            <p id="switch2" onclick="tologin()">←Sign in</p>


            <div class="container-fluid">

                <form id="registForm" class="mx-5" method="post">

                    <div class="form-row">
                        <div class="col-sm-6 mb-3">
                            <label for="validationDefaultUsername">Username</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupPrepend2">@@</span>
                                </div>
                                <input type="text" class="form-control" asp-for="Regist.username" placeholder="Username" aria-describedby="inputGroupPrepend2" required>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label for="inputEmail">Enter email address</label>
                            <input type="email" class="form-control" asp-for="Regist.email" placeholder="Enter email" required>
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="col-sm-6 mb-3">
                            <label for="setPassword">Password</label>
                            <input type="password" class="form-control" asp-for="Regist.password" placeholder="Set password" required>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label for="setPassword">Repeat Password</label>
                            <input type="password" class="form-control" asp-for="Regist.repeatPassword" placeholder="Repeat password" required>
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="col-sm-6 mb-3">
                            <label for="validationDefault01">First name</label>
                            <input type="text" class="form-control" asp-for="Regist.firstName" placeholder="First name" required>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label for="validationDefault02">Last name</label>
                            <input type="text" class="form-control" asp-for="Regist.lastName" placeholder="Last name" required>
                        </div>
                    </div>



                    <div class="form-row">

                        <div class="col-sm-6 mb-3">
                            <label for="setBirthday">Date of birth</label>
                            <input type="date" class="form-control" asp-for="Regist.birthdate">
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label for="inputPhone">Phone</label>
                            <input type="tel" class="form-control" asp-for="Regist.phone" placeholder="Enter phone number" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                            <label class="form-check-label" for="invalidCheck2">
                                Agree to terms and conditions
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="gradientButton" id="regist" asp-page-handler="Regist">Regist</button>
                </form>
                       <div id="messageDiv"></div>

            </div>

        </div>







        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

        <script src="~/js/login.js"></script>
    </body>
    </html>
    
    
